{
  "name": "barcode-capture-simple-pwa-sample",
  "displayName": "WebBarcodeCaptureSimplePwaSample",
  "version": "1.0.0",
  "author": "Scandit",
  "description": "BarcodeCaptureSimpleSample for the Web as Pwa",
  "type": "module",
  "scripts": {
    "update-pwa-assets": "npx pwa-asset-generator assets/pwa/fullscreen.svg -m manifest_icons_template.json -i ./index.html -f --path-override 'pwa' assets/pwa -a pwa/",
    "dev": "vite",
    "build": "tsc && vite build --mode production",
    "fast-build": "vite build",
    "serve": "vite preview",
    "lint": "npx biome lint .",
    "format": "npx biome format ."
  },
  "dependencies": {
    "@scandit/web-datacapture-barcode": "8.1.0",
    "@scandit/web-datacapture-core": "8.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "dotenv": "^16.0.3",
    "npm-packlist": "^5.1.1",
    "pwa-asset-generator": "^8.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.1.0",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
